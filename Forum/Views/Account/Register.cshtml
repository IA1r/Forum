@model Forum.RequestModel.RegisterRequestModel

@{
    ViewBag.Title = "Register";
}
<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
<script src="~/Scripts/Registration.js"></script>

<h2>Register</h2>

@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST" }, new { onsubmit = "Register()" }))
{

    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div id="login" class="editor-field">
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
            <label id="error_login" style="color:red"></label>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div>
            @Html.LabelFor(model => model.Email)
        </div>
        <div id="email" class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
            <label id="error_email" style="color:red"></label>
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <div id="captcha" class="g-recaptcha" data-sitekey="6LcbNSYTAAAAACPAOBRdRMLSd14qTbQ1hdJZJoiR"></div>
        <label id="error_captcha" style="color:red"></label>

        <p>
            <input type="submit" value="Register" />
        </p>
    </fieldset>
}