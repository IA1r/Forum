<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/custom")
</head>
<body>
    <div class="header">
        <div class="headerText">
            <a href="/Topic/Sections" style="color: black; text-decoration:none;font-size:50px">Forum</a>
        </div>
        <div class="greeting">
            @Html.Partial("~/Views/Partials/Greeting.cshtml")
        </div>
    </div>

    <div>
        <div class="body">
            @RenderBody()
        </div>

        <div class="searchTopic">
            @Html.Partial("~/Views/Partials/SearchTopic.cshtml")
        </div>

        <div class="b-popup" hidden="hidden" id="password_form">
            <div class="b-popup-content">
                <div>
                    <label>Password</label>
                    <img id="close_lines" style="margin-left:145px" src="/Content/Images/cross-lines.jpg" onclick="HideForm()" />
                </div>

                <div>
                    <div>
                        <input type="password" id="password" />
                        <input type="button" onclick="Access()" value="Enter" style="margin-top:5px" />
                    </div>
                    <label id="wrong_password" style="color:red;margin-left:50px"></label>
                </div>
            </div>
        </div>



        <div style="clear:both"></div>
    </div>


    <div class="footer">
        Forum / ASP.NET MVC <br>
        Created by Andrew Gumenyuk
    </div>
</body>
</html>
